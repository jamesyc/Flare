<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/directionsContainer" tools:context=".wMainActivity"
    tools:deviceIds="wear"
    android:keepScreenOn="true"
    android:background="#272222">


    <TextView android:id="@+id/navTitle"
        app:layout_box="all"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/navTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <!--<TextView android:id="@+id/directionsTextHolder"-->
        <!--app:layout_box="all"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:text="@string/directionsStringHolder"-->
        <!--android:gravity="center"-->
        <!--android:textColor="@android:color/white" />-->

    <ImageView android:id="@+id/manueverImg"
        android:layout_width="110dp"
        android:layout_height="110dp"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"

        android:contentDescription="direction" />

    <TextView android:id="@+id/distance_toImg"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"

        android:layout_marginTop="140dp"
        android:layout_gravity="center_horizontal"

        android:contentDescription="direction"
        android:textColor="@android:color/white"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/o_of_4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"

        android:contentDescription="dots" />


</android.support.wearable.view.BoxInsetLayout>